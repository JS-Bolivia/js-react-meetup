            <p class="text-xl">{EVENT_LOCATION}</p>
            <p class="text-xl">{EVENT_CITY}</p>
          </section>
        </section>

        <section class="flex items-center gap-2 justify-center">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="30"
            height="30"
            viewBox="0 0 30 30"
            fill="none"
          >
