        target="_blank"
        rel="noopener noreferrer"
        class="border-2 rounded-4xl py-3 px-10 hover:bg-white hover:text-[#087EA6] hover:border-[#087EA6] bg-[#17171799] transition-all duration-300 ease-in-out"
